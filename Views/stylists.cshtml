<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Stylists at Jimbo's Hair Salon</h1>
    @if (Model.Count == 0)
    {
      <p>There are no Stylists currently working at Jimbo's. Guess you have to cut your own hair...</p>
    }
    <ul>
      @foreach(var stylist in Model)
      {
        <li><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a>| <a href="/stylists/update/@stylist.GetId()">Edit</a></li>
      }
    </ul>
    <a href="/stylists/new">Add a New Stylist</a>
  </body>
</html>
